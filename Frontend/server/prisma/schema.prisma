
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(uuid())
  email     String       @unique
  username  String?
  name      String?
  role      String
  password  String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  results   ExamResult[]
}

model Question {
  id         String   @id @default(uuid())
  text       String
  choices    Json
  type       String
  difficulty String
  score      Int
  category   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Exam       Exam[]   @relation("ExamToQuestion")
}

model Exam {
  id           String       @id @default(uuid())
  title        String
  description  String?
  duration     Int
  totalScore   Int
  passingScore Int
  questions    Question[]   @relation("ExamToQuestion")
  assignedTo   User[]       @relation("ExamToUser")
  results      ExamResult[]
  status       String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model ExamResult {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  exam        Exam     @relation(fields: [examId], references: [id])
  examId      String
  score       Float
  status      String
  answers     Json
  startedAt   DateTime?
  completedAt DateTime
  createdAt   DateTime @default(now())
}
